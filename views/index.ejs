<body>
<div class="container">
    <h1>Jeu de Morpion</h1>
    <div class="message"><%= message %></div>

    <form action="/move" method="POST">
        <table>
            <% for(let row=0; row<3; row++) { %>
                <tr>
                    <% for(let col=0; col<3; col++) {
                        const idx = row * 3 + col;
                        const cell = board[idx];
                        const isDisabled = gameOver || (cell !== '');
                    %>
                    <td>
                        <% if (cell === '') { %>
                            <!-- Radio input for choosing this cell -->
                            <label>
                                <input type="radio" name="move" value="<%= idx %>" <%= isDisabled ? "disabled" : "" %> required>
                                <span>&nbsp;</span>
                            </label>
                        <% } else { %>
                            <span><%= cell %></span>
                        <% } %>

                        <!-- Keep board state as hidden inputs -->
                        <input type="hidden" name="cell<%= idx %>" value="<%= cell %>">
                    </td>
                    <% } %>
                </tr>
            <% } %>
        </table>

        <!-- Current Player -->
        <% if (!gameOver) { %>
            <div>Joueur courant: <strong><%= currentPlayer %></strong></div>
            <br />
            <input type="hidden" name="currentPlayer" value="<%= currentPlayer %>">
            <input type="submit" value="Jouer ce coup" />
        <% } else { %>
